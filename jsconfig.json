{
  "compilerOptions": {
    // Specifies the ECMAScript version to target (ES2015 in this case).
    "target": "es2015",
    // Enables experimental decorators support in TypeScript.
    "experimentalDecorators": true
  },
  "exclude": [
    // Excludes the "node_modules" directory from being processed.
    "node_modules",
    // Excludes the "dist" directory from being processed.
    "dist"
  ]
}
